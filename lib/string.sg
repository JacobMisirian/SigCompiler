func strlen (ptr str) {
	short len = 0;
	while (str [len] != 0) {
		len += 1;
	}
	return len;
}

func strrev (ptr str) {
	short len = strlen (str);
	short mid;
	if (len % 2 == 0) {
		mid = len / 2;
	} else {
		mid = (len + 1) / 2;
	}

	short i = 0;
	short j = len - 1;

	while (i < mid) {
		byte temp = str [i];
		str [i] = str [j];
		str [j] = temp;

		i += 1;
		j -= 1;
	}

	return str;
}
